{
    "manifest_version": 3,
    "name": "Lichess Tournament Filter",
    "version": "1.0",
    "description": "Filter tournaments on Lichess.org",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://lichess.org/tournament*"
            ],
            "js": [
                "dist/content.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lichess.org/storm/dashboard*"
            ],
            "js": [
                "dist/storm.js"
            ],
            "run_at": "document_end"
        }
    ]
}